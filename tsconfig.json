{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "$src/*": [
        "src/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$layouts/*": [
        "src/layouts/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "./astro.config.mjs",
  ],
  "extends": "astro/tsconfigs/strict"
}